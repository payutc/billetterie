{% extends 'PayutcAdminBundle::base.html.twig' %}

{% block admin_nav_content %}{% endblock %}

{% block app_content %}
	<div class='well'>
		{% if error %}
			<div class='alert alert-danger alert-dismissable'>
				<p><strong>Erreur !</strong> <span>{{ error.message }}</span></p>
			</div>
		{% endif %}
		<form action='{{ path('pay_utc_admin_login_check') }}' method='post' class='form-horizontal'>
			<div class='form-group'>
				<label for='username' class='control-label col-sm-2'>Utilisateur</label>
				<div class='col-sm-10'>
					<input type='text' class='form-control' id='username' name='_username' value='{{ last_username }}' />
				</div>
			</div>
			<div class='form-group'>
				<label for='password' class='control-label col-sm-2'>Mot de passe</label>
				<div class='col-sm-10'>
					<input type='password' class='form-control' id='password' name='_password' />
				</div>
			</div>
			<div class='form-group'>
				<div class='col-lg-offset-1'>
					<input type='submit' class='btn btn-success' name='submit' value='Connexion' />
				</div>
			</div>
		</form>
	</div>
{% endblock %}